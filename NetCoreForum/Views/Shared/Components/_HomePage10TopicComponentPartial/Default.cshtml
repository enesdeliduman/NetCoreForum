@model List<Last10TopicForHomePageDTO>

    ﻿<div class="home-area">
    <div class="tabs">
        <a href="" class="tab tab-active">Son konular</a>
        <a href="" class="tab">En çok ilgi görenler</a>
    </div>
    <table class="topics">
        <tr class="table-column">
            <th class="topic-title">Başlık</th>
            <th class="topic-to">Konu sahibi</th>
            <th class="topic-date">Tarih</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="table-line">
                <td class="topic-title"><a asp-controller="Topics" asp-action="TopicDetails" asp-route-id="@item.TopicID">@item.TopicTitle</a></td>
                <td class="topic-to"><a href="">@item.AppUser</a></td>
                <td class="topic-date"><span>@item.CategoryTitle</span></td>
            </tr>
        }
    </table>
</div>